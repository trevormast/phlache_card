<% javascript_file_name = @react_layout ? 'react_application' : 'application' %>

<!DOCTYPE html>
<html>
  <head>
    <title>PhlacheQard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag javascript_file_name, 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />

    <%= render partial: 'layouts/bootstrap' %>
  </head>

  <body>
    <%= render partial: 'layouts/navbar' %>
    <div class="container-fluid" style="padding: 15px;">
      <%= yield %>
    </div>
  </body>
</html>
